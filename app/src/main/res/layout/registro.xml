<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tiendita"
    android:paddingTop="30dp"
    android:paddingHorizontal="20dp"
    android:orientation="vertical"
    >


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hsc"
        android:layout_weight="0.8"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fl1"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/form1" />

                <EditText
                    android:id="@+id/registro-Nombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:hint="Nombre"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:textColorHint="#FFFFFF"
                    android:inputType="text"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fl2"
                android:layout_below="@id/fl1"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/form1" />

                <EditText
                    android:id="@+id/registro-apellidoP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:hint="Apellido paterno"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColorHint="#FFFFFF"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fl3"
                android:layout_below="@id/fl2"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/form1" />

                <EditText
                    android:id="@+id/registro-apellidoM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:hint="Apellido materno"
                    android:padding="10dp"
                    android:textColorHint="#FFFFFF"
                    android:inputType="text"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fl4"
                android:layout_below="@id/fl3"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/form1" />

                <EditText
                    android:id="@+id/registro_fnacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:hint="Fecha de nacimiento AÑO-MES-DIA"
                    android:padding="10dp"
                    android:textColorHint="#FFFFFF"
                    android:inputType="phone"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fl5"
                android:layout_below="@id/fl4"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/form1" />

                <EditText
                    android:id="@+id/registro-correo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:hint="Correo electronico"
                    android:padding="10dp"
                    android:textColorHint="#FFFFFF"
                    android:inputType="text"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    />


            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fl6"
                android:layout_below="@id/fl5"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/form1" />

                <EditText
                    android:id="@+id/registro-telefono"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:hint="Telefono"
                    android:padding="10dp"
                    android:textColorHint="#FFFFFF"
                    android:inputType="phone"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fl7"
                android:layout_below="@id/fl6"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/form1" />

                <EditText
                    android:id="@+id/registro-pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:hint="Contraseña"
                    android:padding="10dp"
                    android:textColorHint="#FFFFFF"
                    android:inputType="textPassword"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    />

            </FrameLayout>
        </RelativeLayout>
    </HorizontalScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Registrar"
        android:background="@mipmap/btngreen"
        android:layout_below="@id/hsc"
        android:id="@+id/registrar"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_weight="0.2"
        />

</LinearLayout>
